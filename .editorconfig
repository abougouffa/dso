# https://github.com/editorconfig/editorconfig/wiki/EditorConfig-Properties

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.{c,cc,cpp,h,hh,hpp}]
indent_size = 2
indent_style = space
trim_trailing_whitespace = true
max_line_length = off

[Makefile]
indent_style = tab
